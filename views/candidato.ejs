<!DOCTYPE html>
<html>

<head>
  <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
  <link rel='stylesheet' href='/stylesheets/materialize.min.css' />
  <link rel='stylesheet' href='/stylesheets/palette.css' />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <link href="https://cdn.quilljs.com/1.3.6/quill.snow.css" rel="stylesheet">
</head>

<style>
  .slider .slides {
    background-color: transparent;
    margin: 0;
    height: 400px;
  }

  .slider .slides li img {
    height: 100%;
    width: 100%;
    background-position: center;
    background-size: 100% auto;
    background-repeat: no-repeat;
  }
</style>

<body>
  <script>
    function t() {
      var texto = document.getElementsByClassName('ql-editor');
      var hi = document.getElementById('h');
      hi.value = texto[0].innerHTML;
      console.log(texto[0].innerHTML);
    }
  </script>

  <% include partials/header %>

  <script type="text/javascript" src="javascripts/functions.js"></script>
  <div class="container center-align">
    <h3>Envie seu Curr√≠culo</h3>
    <form action="/candidatos" method="POST" enctype="multipart/form-data">
      <div class="row">
        <div class="input-field col s6">
          <input id="nome" name="nome" type="text" required class="validate">
          <label for="nome">Nome</label>
        </div>
        <div class="input-field col s6">
          <input id="cpf" name="cpf" type="text" required class="validate">
          <label for="cpf">CPF</label>
        </div>
      </div>
      <div class="left-align">
        Mande uma mensagem:
      </div>
      <div class="row" id="editor">
      </div>
      <input type="hidden" id="h" name='desc' required value="">

      <div class="file-field input-field">
        <div class="btn">
          <span>File</span>
          <input type="file" name='arq' accept=".pdf, .docx">
        </div>
        <div class="file-path-wrapper">
          <input class="file-path validate" type="text" placeholder="Upload One file">
        </div>
      </div>
      <button class="btn waves-effect waves-light" onclick="t()" type="submit" name="action">Submit
        <i class="material-icons right">send</i>
      </button>
    </form>
  </div>

  <script type="text/javascript" src="javascripts/jquery.js"></script>
  <script type="text/javascript" src="javascripts/materialize.min.js"></script>
  <script src="https://cdn.quilljs.com/1.3.6/quill.js"></script>
  <script>
    $(document).ready(function () {
      $('.sidenav').sidenav();
    });
    var quill = new Quill('#editor', {
      theme: 'snow'
    });
    $(document).ready(() => {
      console.log($('.ql-editor').html());
      $('.ql-editor').blur(() => {
        var value = $('.ql-editor').html();
        console.log(value);
        $('#h').val(value);
        console.log($('#h').val())
      })
    })
  </script>

</body>

</html>
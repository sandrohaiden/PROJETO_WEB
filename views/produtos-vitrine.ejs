<!DOCTYPE html>
<html>

<head>
  <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
  <link rel='stylesheet' href='/stylesheets/materialize.min.css' />
  <link rel='stylesheet' href='/stylesheets/palette.css' />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
</head>

<style>
  .slider .slides {
    background-color: transparent;
    margin: 0;
    height: 400px;
  }

  .slider .slides li img {
    height: 100%;
    width: 100%;
    background-position: center;
    background-size: 100% auto;
    background-repeat: no-repeat;
  }
</style>

<body>
  <span id="header">
    <% include partials/header %>
  </span>
  <script type="text/javascript" src="javascripts/functions.js"></script>
  <div class="center-align">
    <h3>Ofertas Quentes!</h3>
  </div>
  <div class="row">
    <% for(produto of produtos){ %>
    <div class="col l3 s12">
      <div class="card">
        <div class="card-image waves-effect waves-block waves-light">
          <a href="/produtos/<%= produto.procodigo %>">
            <img style="height: 60pt;" class="responsive-img" src="<%= produto.projfotos[0].path%>">
          </a>
        </div>
        <div class="card-content">
          <span class="card-title activator grey-text text-darken-4"><%= produto.pronome %><i
              class="material-icons right">more_vert</i></span>
          <div class="center-align">
            <h5>R$ <%- produto.propreco %></h5>
          </div>
          <p>
            <div class="row" style="text-align: center">
              <a class="waves-effect waves-light btn" onclick="teste(<%=JSON.stringify(produto)%>);"><i
                  class="material-icons left">shopping_cart</i>COMPRAR</a>
            </div>
          </p>
        </div>
        <div class="card-reveal">
          <span class="card-title grey-text text-darken-4">Card Title<i class="material-icons right">close</i></span>
          <p id="descricao"><%- produto.prodescricao %></p>
        </div>
      </div>
    </div>
    <% } %>
  </div>

  <script type="text/javascript" src="javascripts/jquery.js"></script>
  <script type="text/javascript" src="javascripts/materialize.min.js"></script>
  <script>
    $(document).ready(function () {
      $('.sidenav').sidenav();
    });
    $(document).ready(function () {
      var usuario = JSON.parse(window.sessionStorage.getItem('usuario'));
      if (usuario.tipdescricao == 'administrador') {
        $('#nav-mobile').html('<li><a href="/carrinho">Sair</a></li>')
      }
    });
  </script>
  <script>
    console.log(<% - JSON.stringify(produtos) %>)
  </script>

</body>

</html>